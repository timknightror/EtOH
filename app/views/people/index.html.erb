<h1>Listing people</h1>

<table>
  <tr>
    <th>Ln</th>
    <th>Fn</th>
    <th>Mn</th>
    <th>Dob</th>
    <th>Tel1</th>
    <th>Ptype id1</th>
    <th>Tel2</th>
    <th>Ptype id2</th>
    <th>Add</th>
    <th>Contact</th>
    <th>Client</th>
    <th>Tech</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.ln %></td>
    <td><%= person.fn %></td>
    <td><%= person.mn %></td>
    <td><%= person.dob %></td>
    <td><%= person.tel1 %></td>
    <td><%= person.ptype_id1 %></td>
    <td><%= person.tel2 %></td>
    <td><%= person.ptype_id2 %></td>
    <td><%= person.add_id %></td>
    <td><%= person.contact %></td>
    <td><%= person.client %></td>
    <td><%= person.tech %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

