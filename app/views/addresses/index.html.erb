<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Add1</th>
    <th>Add2</th>
    <th>Add3</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone1</th>
    <th>Phone1type</th>
    <th>Phone2</th>
    <th>Phone2type</th>
    <th>Phone3</th>
    <th>Phone3type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.add1 %></td>
    <td><%= address.add2 %></td>
    <td><%= address.add3 %></td>
    <td><%= address.city %></td>
    <td><%= address.state %></td>
    <td><%= address.zip %></td>
    <td><%= address.phone1 %></td>
    <td><%= address.phone1type %></td>
    <td><%= address.phone2 %></td>
    <td><%= address.phone2type %></td>
    <td><%= address.phone3 %></td>
    <td><%= address.phone3type %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

